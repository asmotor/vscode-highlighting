{
    "comments": {
        // symbol used for single line comment. Remove this entry if your language does not support line comments
        "lineComment": ";",
        "blockComment": ["\tIF 0\n", "\tENDC\n"]
    },
    // symbols used as brackets
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    // symbols that are auto closed when typing
    "autoClosingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
    // symbols that that can be used to surround a selection
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
    // indent after label and outdent if a label is defined at an indented position
    "indentationRules": {
        "increaseIndentPattern": "^(\\.?[A-Za-z_][A-Za-z0-9_]*)|(([0-9]+)\\$)$",
        "decreaseIndentPattern": "^(\\s+(([A-Za-z_][A-Za-z0-9_]*:)|(([0-9]+)\\$)|(\\.[A-Za-z_][A-Za-z0-9_]+)))$"   
    },
//    "wordPattern": "(\\.?[A-Za-z_][A-Za-z0-9_]*)|(([0-9]+)\\$)|(\\$[0-9a-fA-F]+)|([0-9]+)|(\\%[01]+)"
    "wordPattern": "a^"
}