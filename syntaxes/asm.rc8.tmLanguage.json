{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "ASMotor.RC8",
	"scopeName": "source.asm.rc8",
	"patterns": [
		{ "include": "#mnemonics" },
		{ "include": "#addressing-modes" },
		{ "include": "#storage-type" }
	],
	"repository": {
		"mnemonics": {
			"match": "\\b(?i:ADD|AND|CMP|DI|DJ|EI|EXG|EXT|J|JAL|LCO|LCR|LD|LIO|LS|NEG|NOP|NOT|OR|POP|POPA|PUSH|PUSHA|RETI|RS|RSA|SUB|SYS|TST|XOR)\\b",
			"name": "keyword.other.asm.mnemonic"
		},
		"addressing-modes": {
			"match": "\\b(?i:LE|GT|LT|GE|LEU|GTU|LTU|GEU|EQ|NE|F|T|B|C|D|E|H|L|FT|BC|DE|HL|\\(C\\)|\\(FT\\)|\\(BC\\)|\\(DE\\)|\\(HL\\))\\b",
			"name": "support.variable.asm"
		},
		"storage-type": {
			"name": "storage.type.asm",
			"match": "\\b(?i:DS|DB|DW|RB|RW)\\b"
		}
	}
}



